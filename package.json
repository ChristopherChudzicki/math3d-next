{
  "name": "math3d-next",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.3.1",
  "devDependencies": {
    "@math3d/eslint-config": "workspace:*",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "lint": "yarn workspaces foreach --verbose run lint",
    "test": "yarn workspaces foreach --verbose run test",
    "build": "yarn workspace app build",
    "global:lint": "cd $INIT_CWD && eslint --max-warnings 0 \"./src/**/*.{ts,tsx}\""
  }
}
