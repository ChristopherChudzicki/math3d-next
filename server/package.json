{
  "name": "auth-test",
  "version": "0.0.1",
  "description": "Toying with server auth",
  "scripts": {
    "start": "node build/index.js",
    "start:dev": "nodemon -r dotenv/config build/index.js dotenv_config_path=.env.development.local --watch build",
    "build": "rm -rf build && tsc",
    "build:watch": "tsc --watch",
    "migrate:local": "env $(grep -v '^#' .env.development.local | xargs) npx sequelize-cli db:migrate",
    "seed:all:local": "env $(grep -v '^#' .env.development.local | xargs) npx sequelize-cli db:seed:all",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "node -r dotenv/config $(which jest) test/ dotenv_config_path=.env.test",
    "test:watch": "node -r dotenv/config $(which jest) test/ --watch dotenv_config_path=.env.test",
    "test:cov": "jest --coverage"
  },
  "main": "build/index.js",
  "dependencies": {
    "ajv": "^8.8.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.5",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.1",
    "postgrator": "^5.0.0",
    "sequelize": "^6.12.4",
    "sequelize-cli": "^6.3.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.3.2"
  },
  "license": "MIT"
}
